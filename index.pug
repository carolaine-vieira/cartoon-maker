html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="style.css")
    title Document
  body 
    #main 
      aside 
        span.title Add
        ul#add-elements-link          
          li
            a#add-page Page
          li
            a#add-background Background 
          li
            a Object
          li
            a Baloon
          li
            a Divider

        span.title Export as
        ul#export-links        
          li
            a#export Print
          li
            a#export Image
            
        <p><input type="file"  accept="image/*" name="image" id="file" style="display: none;"></p>
        <p><label for="file" style="cursor: pointer;">Upload Image</label></p>
        <p><img id="output" width="200" /></p>

      #editor 
        .editor-container#editor-1
          span.editor-label Page 1
          .add-content.add-content-1 
            a.add-elements Add content

