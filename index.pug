doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css")
    title Cartoon Creator
  body 
    #main 
      aside.left#modal 
        span.category-title Export as
        ul#export-links        
          li
            a(id="export" class="editable") Print
          //- li
          //-   a#export Image

        span.category-title Editor Settings
        ul#export-links        
          li
            span(class="fas fa-search-plus" title="Page zoom") 
            input(type="number" min="30" max="120" id="page-zoom" value="80")

        .plus-options
          span.category-title Cartoon Options
          ul 
            li
              a(class="add-page editable")
                span(class="fas fa-skiing") 
                span(class="link-label") Add Page

            li 
              input(type="file" accept="image/*" name="image" class="editable ipt-right-aside" id="ipt-add-background")
              label(for="ipt-add-background" style="cursor: pointer;" class="editable") 
                span(class="fas fa-image") 
                span(class="link-label") Insert Background

            li
              input(type="file" accept="image/*" name="image" class="editable ipt-right-aside" id="ipt-add-object")
              label(for="ipt-add-object" style="cursor: pointer;" class="editable") 
                span(class="fas fa-skiing") 
                span(class="link-label") Insert Object

            li
              a(id="add-ballon" class="editable") 
                span(class="fas fa-comment-dots") 
                span(class="link-label") Add Ballon            
      
      #editor 
        .editor-container#editor-1
          span.editor-label First Page &mdash; Welcome
          .add-content.add-content-1 
            a.add-elements Add content
        
  script(type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
  script(type="text/javascript" src="https://code.jquery.com/ui/1.12.1/jquery-ui.js")
  script(type="module" src="./js/script.js" defer)